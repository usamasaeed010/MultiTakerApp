<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Auth.AddHostelActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add Hostel"
        android:textColor="@color/blue_500"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/addImages"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/multitasker" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hostelnameOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="24dp"
        android:hint="Hostel Name"
        app:expandedHintEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.MyTheme.Subtitle2"
        app:placeholderText="Enter Hostel Name"
        app:placeholderTextAppearance="@style/TextAppearance.MyTheme.Body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hostel_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hostelcontactOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="24dp"
        android:hint="Contact No"
        app:expandedHintEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.MyTheme.Subtitle2"
        app:placeholderText="Enter Contact No"
        app:placeholderTextAppearance="@style/TextAppearance.MyTheme.Body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hostelareaOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="24dp"
        android:hint="Hostel Area"
        app:expandedHintEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.MyTheme.Subtitle2"
        app:placeholderText="Enter Hostel area"
        app:placeholderTextAppearance="@style/TextAppearance.MyTheme.Body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/area_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hostelrentOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="24dp"
        android:hint="Hostel Rent"
        app:expandedHintEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.MyTheme.Subtitle2"
        app:placeholderText="Enter Per month Rent"
        app:placeholderTextAppearance="@style/TextAppearance.MyTheme.Body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rent_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hostelroomOutlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="24dp"
        android:hint="Total Rooms"
        app:expandedHintEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.MyTheme.Subtitle2"
        app:placeholderText="Enter Available Rooms"
        app:placeholderTextAppearance="@style/TextAppearance.MyTheme.Body2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rooms_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/error_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/red_600"
        android:textSize="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"/>


    <Button
        android:id="@+id/submit_hostel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold" />


</LinearLayout>